<!DOCTYPE html>
<html>
<head>
  <title>Censormenot</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="/">CensorMeNot</a>
        <% if is_localhost? %>
        <ul class="nav">
          <li><a href="/lookups">Lookups</a>
          <li><a href="/requests">Requests</a>
          <li><a href="/lookups/new/">New Lookup</a></li>
          <li><a href="/requests/new/">New Request</a></li>
        </ul>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container"%>
    <div id="flash_messages"></div>
    <%= yield %>
  </div>

</body>
</html>
